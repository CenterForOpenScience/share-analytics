<table style="width: 100%;"class="list-widget widget-body">
    {{#each data as |item|}}
        <tr href="#" class="list-widget-item" {{action "transitionToFacet" item}}>
                <td class="item-number">{{item.number}}</td>
                <td class="item-name">{{item.name}}</td>
                <td class="item-name"><i class="fa fa-angle-right"></i></td>
        </tr>
    {{/each}}
</table>
{{#unless item.hideViewAll}}
    <div class="text-right m-t-md">
        <button class="btn btn-link text-bigger" {{action 'transitionToViewAll' item}}>View all</button>
    </div>
{{/unless}}

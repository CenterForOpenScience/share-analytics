<div class="object-detail">
    <h1 style="padding: 180px 50px 110px 50px; text-align: center; margin: 0; background-color: #eee; overflow: hidden; position: relative; border-radius: 2px; border-bottom: 1px solid rgba(0,0,0,0.2); margin-bottom: 50px;">
        {{{objectData._source.title}}}<br>
        <span style="display: inline-block; background-color: #bbb; color: #fff; padding: 10px 30px; font-size: 17px; border-radius: 2px; font-weight: 600; margin-top: 30px;">{{objectData._source.type}}</span>
    </h1>
    <div><h5>Description</h5>{{objectData._source.description}}</div>
    <div><h5>Contributors</h5><ul>
        {{#each objectData._source.contributors as |contributor|}}
            <li>{{contributor}}</li>
        {{/each}}
    </ul></div>
    <div><h5>Tags</h5>
        {{#each objectData._source.tags as |tag|}}
            <span {{action "transitionToFacet" "resultsList" "tags" tag on="click"}} style="display: inline-block; font-size: 12px; background-color: #7ec4dd; color: #fff; padding: 2px 5px 2px 5px ; border: 1px solid color: #6ebfd5; border-radius: 3px; margin: 3px;">{{tag}}</span>
        {{/each}}
    </div>
    <div><h5>Publishers</h5><ul>
    {{#each objectData._source.publishers as |publisher|}}
        <li>{{publisher}}</li>
    {{/each}}
    </ul></div>
    <div>Date: {{objectData._source.date}}</div>
    <div>Date Created: {{objectData._source.date_created}}</div>
    <div>Date Modified: {{objectData._source.date_modified}}</div>
    <div>Date Published: {{objectData._source.date_published}}</div>
    <div>Date Updated: {{objectData._source.date_updated}}</div>
    <div>Language: {{objectData._source.language}}</div>
    <div><h5>Identifiers</h5><ul>
    {{#each objectData._source.identifiers as |identifier|}}
        <li>{{identifier}}</li>
    {{/each}}
    </ul></div>
    <div><h5>Sources</h5><ul>
    {{#each objectData._source.sources as |source|}}
        <li>{{source}}</li>
    {{/each}}
    </ul></div>

    {{#if showJSON}}
        <h4 {{action toggleProperty 'showJSON'}} style="font-weight: 600; margin-top: 50px; cursor: pointer;">Raw JSON</h4>
        <pre style="margin-bottom: 20px;">
            {{dataAsString}}
        </pre>
    {{else}}
        <h4 {{action toggleProperty 'showJSON'}} style="font-weight: 600; margin-top: 50px; cursor: pointer;">View Raw JSON</h4>
    {{/if}}

</div>

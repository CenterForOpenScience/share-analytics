            {{input class="form-control" type="text" value=query placeholder="e.g., Light Cones"}}
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">{{fa-icon "search"}}</button>
            </span>
        </div>
    </form>
</div>

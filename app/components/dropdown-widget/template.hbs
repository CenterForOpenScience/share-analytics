{{#if (eq mode 'dropdown')}}
    <div class="p-md">
        <select class="form-control" onchange={{action "applyType" value="target.value"}}>
            {{#each dropList key="@identity" as |type|}}
                <option value={{type}} selected={{if (eq selectedType type) true}}>{{type}}</option>
            {{/each}}
        </select>
    </div>
{{/if}}

{{#if (eq mode 'search')}}
<div class="dropdown-search">
    {{input value=filterText placeholder=search key-up="filterVisible"}}
    {{#each filteredList as |item|}}
        <div class="dropdown-search-item p-xs">
            <span {{action "applyType" item}}>{{item}}</span>
        </div>
    {{/each}}
</div>
{{/if}}
